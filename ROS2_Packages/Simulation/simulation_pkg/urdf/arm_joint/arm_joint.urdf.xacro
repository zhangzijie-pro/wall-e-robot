<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
<!-- 左右 -->
  <xacro:macro name="arm_joint" params="index parent child length">
    <joint name="joint${index}" type="revolute">
      <parent link="${parent}"/>
      <child link="${child}"/>
      <origin xyz="0 0 ${length}" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
    </joint>
  </xacro:macro>

<!-- 上下 -->
  <xacro:macro name="gripper_joint" params="parent length">
    <joint name="gripper_joint" type="revolute">
      <parent link="link${parent}"/>
      <child link="gripper_link"/>
      <origin xyz="0 0 ${length}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="1.0" velocity="1.0" lower="0" upper="0.5"/>
    </joint>
  </xacro:macro>

</robot>
